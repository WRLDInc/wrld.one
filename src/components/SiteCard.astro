---
import type { WRLDSite } from '../data/sites';

interface Props {
  site: WRLDSite;
  featured?: boolean;
}

const { site, featured = false } = Astro.props;
---

<a 
  href={site.url} 
  target="_blank" 
  rel="noopener noreferrer"
  class:list={['site-card', { 'site-card--featured': featured }]}
  data-category={site.category}
>
  <svg class="site-card__border-svg" viewBox="0 0 100 100" preserveAspectRatio="none">
    <defs>
      <linearGradient id={`gradient-${site.id}`} x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" stop-color="var(--accent-primary)" stop-opacity="0" />
        <stop offset="50%" stop-color="var(--accent-primary)" stop-opacity="1" />
        <stop offset="100%" stop-color="var(--accent-primary)" stop-opacity="0" />
      </linearGradient>
    </defs>
    <rect class="border-rect" x="0" y="0" width="100" height="100" fill="none" stroke={`url(#gradient-${site.id})`} stroke-width="0.5" vector-effect="non-scaling-stroke" />
  </svg>
  
  <div class="border-tracer border-tracer--1"></div>
  <div class="border-tracer border-tracer--2"></div>
  
  <div class="site-card__header">
    <div class="site-card__icon" style={`color: ${site.color}`}>
      {site.icon}
    </div>
    <div class="site-card__status">
      <span class:list={['status', `status--${site.status}`]}>
        {site.status}
      </span>
    </div>
  </div>
  
  <div class="site-card__content">
    <h3 class="site-card__name">{site.name}</h3>
    <p class="site-card__domain">{site.domain}</p>
    <p class="site-card__description">{site.description}</p>
  </div>
  
  <div class="site-card__features">
    {site.features.slice(0, 3).map(feature => (
      <span class="site-card__feature">{feature}</span>
    ))}
  </div>
  
  <div class="site-card__arrow">
    <span>Visit</span>
    <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
      <path d="M4 12L12 4M12 4H6M12 4V10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </div>
</a>

<style>
  .site-card {
    --card-rx: 0deg;
    --card-ry: 0deg;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    padding: var(--space-xl);
    background: rgba(var(--bg-secondary-rgb, 30, 41, 59), 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: var(--text-primary);
    transition: background 0.3s, border-color 0.3s;
    overflow: hidden;
  }
  
  /* SVG Border Drawing Effect */
  .site-card__border-svg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }
  
  .border-rect {
    stroke-dasharray: 400;
    stroke-dashoffset: 400;
    filter: drop-shadow(0 0 4px var(--accent-primary));
    transition: stroke-dashoffset 0.6s ease-out, opacity 0.3s ease-out;
  }
  
  /* Draw border on hover */
  .site-card:hover .border-rect {
    stroke-dashoffset: 0;
    animation: borderPulse 2s ease-in-out infinite;
  }
  
  /* Tron-style breakaway on hover out */
  .site-card:not(:hover) .border-rect {
    stroke-dashoffset: -400;
    opacity: 0;
    transition: stroke-dashoffset 0.4s ease-in, opacity 0.4s ease-in;
  }
  
  @keyframes borderPulse {
    0%, 100% { filter: drop-shadow(0 0 4px var(--accent-primary)); }
    50% { filter: drop-shadow(0 0 8px var(--accent-primary)); }
  }
  
  /* Tracer squares that "draw" the border */
  .border-tracer {
    position: absolute;
    width: 6px;
    height: 6px;
    background: var(--accent-primary);
    box-shadow: 0 0 16px var(--accent-primary), 0 0 8px var(--accent-primary);
    opacity: 0;
    pointer-events: none;
    z-index: 2;
  }
  
  /* Tracer 1: Starts top-right, goes around clockwise */
  .border-tracer--1 {
    top: 0;
    right: 0;
  }
  
  .site-card:hover .border-tracer--1 {
    animation: tracerPath1 1.6s ease-in-out forwards;
  }
  
  /* Tracer 2: Starts bottom-left, goes around counter-clockwise */  
  .border-tracer--2 {
    bottom: 0;
    left: 0;
  }
  
  .site-card:hover .border-tracer--2 {
    animation: tracerPath2 1.6s ease-in-out forwards;
    animation-delay: 0.1s;
  }
  
  @keyframes tracerPath1 {
    0% { 
      top: 0; right: 0; 
      opacity: 0;
    }
    5% { opacity: 1; }
    25% { 
      top: 0; right: 100%; 
      opacity: 1;
    }
    30% { 
      top: 0; right: 100%; left: 0;
      opacity: 1;
    }
    50% { 
      top: 100%; left: 0; 
      opacity: 1;
    }
    55% {
      top: 100%; bottom: 0; left: 0;
      opacity: 1;
    }
    75% { 
      bottom: 0; left: 100%; right: 0;
      opacity: 1;
    }
    80% {
      bottom: 0; right: 0;
      opacity: 1;
    }
    100% { 
      top: 0; right: 0;
      opacity: 0;
    }
  }
  
  @keyframes tracerPath2 {
    0% { 
      bottom: 0; left: 0; 
      opacity: 0;
    }
    5% { opacity: 1; }
    25% { 
      bottom: 0; left: 100%; right: 0;
      opacity: 1;
    }
    30% { 
      bottom: 0; right: 0;
      opacity: 1;
    }
    50% { 
      bottom: 100%; top: 0; right: 0; 
      opacity: 1;
    }
    55% {
      top: 0; right: 0;
      opacity: 1;
    }
    75% { 
      top: 0; right: 100%; left: 0;
      opacity: 1;
    }
    80% {
      top: 0; left: 0;
      opacity: 1;
    }
    100% { 
      bottom: 0; left: 0;
      opacity: 0;
    }
  }
  
  .site-card:hover {
    background: rgba(var(--bg-secondary-rgb, 30, 41, 59), 0.6);
    border-color: var(--accent-primary);
  }
  
  .site-card--featured {
    grid-column: span 2;
  }
  
  @media (max-width: 768px) {
    .site-card--featured {
      grid-column: span 1;
    }
  }
  
  .site-card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .site-card__icon {
    font-size: 2rem;
    line-height: 1;
    filter: drop-shadow(0 0 8px currentColor);
  }
  
  .site-card__content {
    flex: 1;
  }
  
  .site-card__name {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: var(--space-xs);
    color: var(--text-primary);
  }
  
  .site-card__domain {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--accent-primary);
    margin-bottom: var(--space-sm);
  }
  
  .site-card__description {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .site-card--featured .site-card__description {
    -webkit-line-clamp: 3;
  }
  
  .site-card__features {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }
  
  .site-card__feature {
    padding: 4px 10px;
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-full);
    color: var(--text-secondary);
  }
  
  .site-card__arrow {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--accent-primary);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }
  
  /* Orange accent for core services */
  .site-card[data-category="core"] .site-card__arrow,
  .site-card[data-category="labs"] .site-card__arrow {
    color: var(--accent-secondary);
  }
  
  .site-card[data-category="core"] .border-tracer,
  .site-card[data-category="labs"] .border-tracer {
    background: var(--accent-secondary);
    box-shadow: 0 0 16px var(--accent-secondary), 0 0 8px var(--accent-secondary);
  }
  
  .site-card[data-category="core"] .border-rect,
  .site-card[data-category="labs"] .border-rect {
    stroke: var(--accent-secondary);
    filter: drop-shadow(0 0 4px var(--accent-secondary));
  }
  
  .site-card[data-category="core"]:hover .border-rect,
  .site-card[data-category="labs"]:hover .border-rect {
    animation: borderPulseOrange 2s ease-in-out infinite;
  }
  
  @keyframes borderPulseOrange {
    0%, 100% { filter: drop-shadow(0 0 4px var(--accent-secondary)); }
    50% { filter: drop-shadow(0 0 8px var(--accent-secondary)); }
  }
  
  .site-card:hover .site-card__arrow {
    opacity: 1;
    transform: translateX(0);
  }
  
  .site-card__arrow svg {
    transition: transform 0.2s ease;
  }
  
  .site-card:hover .site-card__arrow svg {
    transform: translate(2px, -2px);
  }
</style>
