---
import type { WRLDSite } from '../data/sites';

interface Props {
  site: WRLDSite;
  featured?: boolean;
}

const { site, featured = false } = Astro.props;
---

<a 
  href={site.url} 
  target="_blank" 
  rel="noopener noreferrer"
  class:list={['site-card', { 'site-card--featured': featured }]}
  data-category={site.category}
>
  <svg class="site-card__border-svg" viewBox="0 0 100 100" preserveAspectRatio="none">
    <rect 
      class="border-rect" 
      x="0.5" 
      y="0.5" 
      width="99" 
      height="99" 
      fill="none" 
      stroke="currentColor" 
      stroke-width="0.5" 
      vector-effect="non-scaling-stroke"
      pathLength="1"
    />
  </svg>
  
  <div class="site-card__header">
    <div class="site-card__icon" style={`color: ${site.color}`}>
      {site.icon}
    </div>
    <div class="site-card__status">
      <span class:list={['status', `status--${site.status}`]}>
        {site.status}
      </span>
    </div>
  </div>
  
  <div class="site-card__content">
    <h3 class="site-card__name">{site.name}</h3>
    <p class="site-card__domain">{site.domain}</p>
    <p class="site-card__description">{site.description}</p>
  </div>
  
  <div class="site-card__features">
    {site.features.slice(0, 3).map(feature => (
      <span class="site-card__feature">{feature}</span>
    ))}
  </div>
  
  <div class="site-card__arrow">
    <span>Visit</span>
    <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
      <path d="M4 12L12 4M12 4H6M12 4V10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </div>
</a>

<script>
  import { animate, hover } from 'motion';

  // Initialize animations for all site cards
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.site-card');
    
    cards.forEach(card => {
      const rect = card.querySelector('.border-rect') as SVGRectElement;
      if (!rect) return;
      
      // Set initial state using SVG attributes
      rect.setAttribute('stroke-dasharray', '1');
      rect.setAttribute('stroke-dashoffset', '1');
      rect.setAttribute('opacity', '0');
      
      // Setup hover animation
      hover(card as HTMLElement, () => {
        // Fade in on hover
        animate(
          (progress) => rect.setAttribute('opacity', String(progress)),
          { duration: 0.1 }
        );
        
        // Draw border from 1 to 0
        animate(
          (progress) => {
            const offset = 1 - progress; // Goes from 1 to 0
            rect.setAttribute('stroke-dashoffset', String(offset));
          },
          { duration: 0.8, easing: [0.22, 1, 0.36, 1] } // Custom easeOutExpo
        );
        
        return () => {
          // Fade out and draw away on hover end
          animate(
            (progress) => {
              const offset = -progress; // Goes from 0 to -1
              const opacity = 1 - progress;
              rect.setAttribute('stroke-dashoffset', String(offset));
              rect.setAttribute('opacity', String(opacity));
            },
            { duration: 0.5, easing: [0.64, 0, 0.78, 0] } // Custom easeInExpo
          );
        };
      });
    });
  });
</script>

<style>
  .site-card {
    --card-rx: 0deg;
    --card-ry: 0deg;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    padding: var(--space-xl);
    background: rgba(var(--bg-secondary-rgb, 30, 41, 59), 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: var(--text-primary);
    transition: background 0.3s, border-color 0.3s;
    overflow: hidden;
  }
  
  /* SVG Border Drawing Effect */
  .site-card__border-svg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
    color: var(--accent-primary);
  }
  
  .border-rect {
    filter: drop-shadow(0 0 6px currentColor);
    will-change: stroke-dashoffset, opacity;
  }
  
  .site-card:hover {
    background: rgba(var(--bg-secondary-rgb, 30, 41, 59), 0.6);
    border-color: var(--accent-primary);
  }

  /* Light mode card styling */
  [data-theme="light"] .site-card {
    background: rgba(255, 255, 255, 0.7);
    border-color: rgba(15, 23, 42, 0.1);
    box-shadow: 0 1px 3px rgba(15, 23, 42, 0.04);
  }

  [data-theme="light"] .site-card:hover {
    background: rgba(255, 255, 255, 0.95);
    border-color: var(--accent-primary);
    box-shadow: 0 8px 25px rgba(15, 23, 42, 0.1);
  }

  @media (prefers-color-scheme: light) {
    :root:not([data-theme]) .site-card {
      background: rgba(255, 255, 255, 0.7);
      border-color: rgba(15, 23, 42, 0.1);
      box-shadow: 0 1px 3px rgba(15, 23, 42, 0.04);
    }
    :root:not([data-theme]) .site-card:hover {
      background: rgba(255, 255, 255, 0.95);
      border-color: var(--accent-primary);
      box-shadow: 0 8px 25px rgba(15, 23, 42, 0.1);
    }
  }

  .site-card--featured {
    grid-column: span 2;
  }
  
  @media (max-width: 768px) {
    .site-card--featured {
      grid-column: span 1;
    }
  }
  
  .site-card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .site-card__icon {
    font-size: 2rem;
    line-height: 1;
    filter: drop-shadow(0 0 8px currentColor);
  }

  /* Light mode icon - reduce glow */
  [data-theme="light"] .site-card__icon {
    filter: drop-shadow(0 0 4px currentColor);
  }

  @media (prefers-color-scheme: light) {
    :root:not([data-theme]) .site-card__icon {
      filter: drop-shadow(0 0 4px currentColor);
    }
  }
  
  .site-card__content {
    flex: 1;
  }
  
  .site-card__name {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: var(--space-xs);
    color: var(--text-primary);
  }
  
  .site-card__domain {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--accent-primary);
    margin-bottom: var(--space-sm);
  }
  
  .site-card__description {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .site-card--featured .site-card__description {
    -webkit-line-clamp: 3;
  }
  
  .site-card__features {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }
  
  .site-card__feature {
    padding: 4px 10px;
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-full);
    color: var(--text-secondary);
  }

  /* Light mode feature tags */
  [data-theme="light"] .site-card__feature {
    background: rgba(15, 23, 42, 0.06);
    border-color: rgba(15, 23, 42, 0.1);
  }

  @media (prefers-color-scheme: light) {
    :root:not([data-theme]) .site-card__feature {
      background: rgba(15, 23, 42, 0.06);
      border-color: rgba(15, 23, 42, 0.1);
    }
  }

  .site-card__arrow {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--accent-primary);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }
  
  /* Orange accent for core/labs services */
  .site-card[data-category="core"] .site-card__arrow,
  .site-card[data-category="labs"] .site-card__arrow {
    color: var(--accent-secondary);
  }
  
  .site-card[data-category="core"] .site-card__border-svg,
  .site-card[data-category="labs"] .site-card__border-svg {
    color: var(--accent-secondary);
  }
  
  .site-card:hover .site-card__arrow {
    opacity: 1;
    transform: translateX(0);
  }
  
  .site-card__arrow svg {
    transition: transform 0.2s ease;
  }
  
  .site-card:hover .site-card__arrow svg {
    transform: translate(2px, -2px);
  }
</style>
