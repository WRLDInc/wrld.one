---
const currentYear = new Date().getFullYear();

const footerLinks = {
  platforms: [
    { label: 'WRLD.tech', href: 'https://wrld.tech' },
    { label: 'WRLD.host', href: 'https://wrld.host' },
    { label: 'WRLD.ai', href: 'https://wrld.ai' },
    { label: 'WRLD.domains', href: 'https://wrld.domains' },
  ],
  resources: [
    { label: 'Documentation', href: 'https://docs.wrld.tech' },
    { label: 'Help Center', href: 'https://help.wrld.tech' },
    { label: 'Status', href: 'https://status.wrld.host' },
    { label: 'Support', href: 'https://wrld.support' },
  ],
  company: [
    { label: 'About', href: '/about' },
    { label: 'Brand', href: 'https://wrld.tech/brand' },
    { label: 'Careers', href: 'https://wrld.tech/careers' },
    { label: 'Contact', href: 'https://wrld.tech/contact' },
  ],
};

const socialLinks = [
  { label: 'GitHub', href: 'https://github.com/WRLDInc', icon: '‚åÇ' },
  { label: 'Twitter', href: 'https://twitter.com/WRLDInc', icon: 'ùïè' },
  { label: 'Discord', href: 'https://discord.gg/wrld', icon: '‚óâ' },
];
---

<footer class="footer">
  <div class="footer__container container">
    <!-- Main Footer -->
    <div class="footer__main">
      <!-- Brand Column -->
      <div class="footer__brand">
        <a href="/" class="footer__logo">
          <span class="footer__logo-icon">‚óÜ</span>
          <span class="footer__logo-text">WRLD<span class="accent">.one</span></span>
        </a>
        <p class="footer__tagline">
          The unified directory for all WRLD platforms and services.
        </p>
        
        <!-- Social Links -->
        <div class="footer__social">
          {socialLinks.map(link => (
            <a 
              href={link.href} 
              target="_blank" 
              rel="noopener noreferrer"
              class="social-link"
              aria-label={link.label}
            >
              <span>{link.icon}</span>
            </a>
          ))}
        </div>
      </div>
      
      <!-- Link Columns -->
      <div class="footer__links">
        <div class="footer__column">
          <h4 class="footer__heading">Platforms</h4>
          <ul class="footer__list">
            {footerLinks.platforms.map(link => (
              <li>
                <a href={link.href} target="_blank" rel="noopener">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="footer__column">
          <h4 class="footer__heading">Resources</h4>
          <ul class="footer__list">
            {footerLinks.resources.map(link => (
              <li>
                <a href={link.href} target="_blank" rel="noopener">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="footer__column">
          <h4 class="footer__heading">Company</h4>
          <ul class="footer__list">
            {footerLinks.company.map(link => (
              <li>
                <a href={link.href}>{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="footer__bottom">
      <div class="footer__copyright">
        <span class="mono">¬©</span> {currentYear} WRLD Inc. All rights reserved.
      </div>
      
      <div class="footer__meta">
        <span class="footer__status">
          <span class="status-dot"></span>
          All systems operational
        </span>
        <span class="footer__divider">¬∑</span>
        <span class="footer__powered">
          Powered by <a href="https://cloudflare.com" target="_blank" rel="noopener">Cloudflare</a>
        </span>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    margin-top: auto;
    padding: var(--space-3xl) 0 var(--space-xl);
    border-top: 1px solid var(--border-subtle);
    background: linear-gradient(180deg, transparent, var(--bg-secondary) 50%);
  }
  
  .footer__main {
    display: grid;
    grid-template-columns: 1.5fr 2fr;
    gap: var(--space-3xl);
    margin-bottom: var(--space-3xl);
  }
  
  /* Brand */
  .footer__brand {
    max-width: 300px;
  }
  
  .footer__logo {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-mono);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    text-decoration: none;
    margin-bottom: var(--space-md);
  }
  
  .footer__logo-icon {
    color: var(--accent-primary);
    font-size: 1.5rem;
  }
  
  .footer__logo-text .accent {
    color: var(--text-secondary);
    font-weight: 400;
  }
  
  .footer__tagline {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-lg);
    line-height: 1.6;
  }
  
  .footer__social {
    display: flex;
    gap: var(--space-sm);
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    text-decoration: none;
    transition: all var(--transition-fast);
  }
  
  .social-link:hover {
    border-color: var(--accent-primary);
    color: var(--accent-primary);
    transform: translateY(-2px);
  }
  
  /* Links */
  .footer__links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
  }
  
  .footer__heading {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--text-primary);
    margin-bottom: var(--space-md);
  }
  
  .footer__list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }
  
  .footer__list a {
    font-size: 0.9rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .footer__list a:hover {
    color: var(--accent-primary);
  }
  
  /* Bottom */
  .footer__bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-xl);
    border-top: 1px solid var(--border-subtle);
  }
  
  .footer__copyright {
    font-size: 0.85rem;
    color: var(--text-muted);
  }
  
  .footer__meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    font-size: 0.85rem;
    color: var(--text-muted);
  }
  
  .footer__status {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }
  
  .status-dot {
    width: 8px;
    height: 8px;
    background: var(--accent-primary);
    border-radius: 50%;
    box-shadow: 0 0 10px var(--accent-primary);
    animation: pulse 2s ease-in-out infinite;
  }
  
  .footer__divider {
    color: var(--text-muted);
  }
  
  .footer__powered a {
    color: var(--accent-secondary);
    text-decoration: none;
  }
  
  .footer__powered a:hover {
    text-decoration: underline;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .footer__main {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }
    
    .footer__brand {
      max-width: none;
    }
  }
  
  @media (max-width: 768px) {
    .footer__links {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .footer__bottom {
      flex-direction: column;
      gap: var(--space-md);
      text-align: center;
    }
    
    .footer__meta {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
  
  @media (max-width: 480px) {
    .footer__links {
      grid-template-columns: 1fr;
    }
  }
</style>
