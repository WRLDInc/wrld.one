<div class="data-flow-bg" aria-hidden="true">
  <!-- Horizontal flows -->
  <div class="flow-line horizontal flow-1"></div>
  <div class="flow-line horizontal flow-2"></div>
  <div class="flow-line horizontal flow-3"></div>
  <div class="flow-line horizontal flow-4"></div>
  
  <!-- Vertical flows -->
  <div class="flow-line vertical flow-5"></div>
  <div class="flow-line vertical flow-6"></div>
  <div class="flow-line vertical flow-7"></div>
  <div class="flow-line vertical flow-8"></div>
  
  <!-- Data packets -->
  <div class="data-packet packet-1"></div>
  <div class="data-packet packet-2"></div>
  <div class="data-packet packet-3"></div>
  <div class="data-packet packet-4"></div>
  <div class="data-packet packet-5"></div>
  <div class="data-packet packet-6"></div>
</div>

<style>
  .data-flow-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    opacity: 0.6;
    pointer-events: none;
    overflow: hidden;
  }

  .flow-line {
    position: absolute;
    background: var(--accent-primary);
    opacity: 0.15;
  }

  /* Horizontal lines */
  .flow-line.horizontal {
    width: 100%;
    height: 2px;
  }

  .flow-1 { top: 15%; }
  .flow-2 { top: 35%; }
  .flow-3 { top: 55%; }
  .flow-4 { top: 75%; }

  /* Vertical lines */
  .flow-line.vertical {
    height: 100%;
    width: 2px;
  }

  .flow-5 { left: 20%; }
  .flow-6 { left: 40%; }
  .flow-7 { left: 60%; }
  .flow-8 { left: 80%; }

  /* Data packets - sharp squares */
  .data-packet {
    position: absolute;
    width: 8px;
    height: 8px;
    background: var(--accent-primary);
    box-shadow: 0 0 20px currentColor;
    opacity: 0.8;
  }

  /* Horizontal packet animations */
  .packet-1 {
    top: 15%;
    animation: moveRight 8s linear infinite;
  }

  .packet-2 {
    top: 35%;
    animation: moveRight 10s linear infinite;
    animation-delay: -2s;
  }

  .packet-3 {
    top: 55%;
    animation: moveRight 12s linear infinite;
    animation-delay: -4s;
  }

  /* Vertical packet animations */
  .packet-4 {
    left: 20%;
    background: var(--accent-secondary);
    animation: moveDown 9s linear infinite;
  }

  .packet-5 {
    left: 60%;
    background: var(--accent-secondary);
    animation: moveDown 11s linear infinite;
    animation-delay: -3s;
  }

  .packet-6 {
    left: 80%;
    animation: moveDown 10s linear infinite;
    animation-delay: -5s;
  }

  @keyframes moveRight {
    0% {
      left: -10px;
      opacity: 0;
    }
    5% {
      opacity: 0.8;
    }
    95% {
      opacity: 0.8;
    }
    100% {
      left: calc(100% + 10px);
      opacity: 0;
    }
  }

  @keyframes moveDown {
    0% {
      top: -10px;
      opacity: 0;
    }
    5% {
      opacity: 0.8;
    }
    95% {
      opacity: 0.8;
    }
    100% {
      top: calc(100% + 10px);
      opacity: 0;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .data-flow-bg {
      opacity: 0.4;
    }
    
    .data-packet {
      width: 6px;
      height: 6px;
    }
  }
</style>
