<div class="data-flow-bg" aria-hidden="true">
  <!-- Horizontal flows -->
  <div class="flow-line horizontal flow-1"></div>
  <div class="flow-line horizontal flow-2"></div>
  <div class="flow-line horizontal flow-3"></div>
  <div class="flow-line horizontal flow-4"></div>
  
  <!-- Vertical flows -->
  <div class="flow-line vertical flow-5"></div>
  <div class="flow-line vertical flow-6"></div>
  <div class="flow-line vertical flow-7"></div>
  <div class="flow-line vertical flow-8"></div>
  
  <!-- Data packets with trailing lines -->
  <div class="data-packet-group packet-group-1">
    <div class="data-packet packet-head"></div>
    <div class="data-trail-line"></div>
  </div>
  
  <div class="data-packet-group packet-group-2">
    <div class="data-packet packet-head"></div>
    <div class="data-trail-line"></div>
  </div>
  
  <div class="data-packet-group packet-group-3">
    <div class="data-packet packet-head"></div>
    <div class="data-trail-line"></div>
  </div>
  
  <div class="data-packet-group packet-group-4">
    <div class="data-packet packet-head"></div>
    <div class="data-trail-line"></div>
  </div>
  
  <div class="data-packet-group packet-group-5">
    <div class="data-packet packet-head"></div>
    <div class="data-trail-line"></div>
  </div>
  
  <div class="data-packet-group packet-group-6">
    <div class="data-packet packet-head"></div>
    <div class="data-trail-line"></div>
  </div>
</div>

<style>
  .data-flow-bg {
    position: fixed;
    inset: 0;
    z-index: 0;
    opacity: 0.6;
    pointer-events: none;
    overflow: hidden;
  }

  .flow-line {
    position: absolute;
    background: var(--accent-primary);
    opacity: 0.15;
  }

  /* Horizontal lines */
  .flow-line.horizontal {
    width: 100%;
    height: 2px;
  }

  .flow-1 { top: 15%; }
  .flow-2 { top: 35%; }
  .flow-3 { top: 55%; }
  .flow-4 { top: 75%; }

  /* Vertical lines */
  .flow-line.vertical {
    height: 100%;
    width: 2px;
  }

  .flow-5 { left: 20%; }
  .flow-6 { left: 40%; }
  .flow-7 { left: 60%; }
  .flow-8 { left: 80%; }

  /* Data packet groups with trails */
  .data-packet-group {
    position: absolute;
  }
  
  .data-packet {
    position: absolute;
    width: 8px;
    height: 8px;
    background: var(--accent-primary);
    box-shadow: 0 0 20px currentColor, 0 0 10px currentColor;
    opacity: 1;
  }
  
  .data-trail-line {
    position: absolute;
    background: linear-gradient(to left, var(--accent-primary), transparent);
    height: 2px;
    width: 60px;
    left: -60px;
    top: 3px;
    opacity: 0.7;
    box-shadow: 0 0 8px currentColor;
  }

  /* Horizontal packet group animations */
  .packet-group-1 {
    top: 15%;
    animation: moveGroupRight 8s linear infinite;
  }
  

  .packet-group-2 {
    top: 35%;
    animation: moveGroupRight 10s linear infinite;
    animation-delay: -2s;
  }
  

  .packet-group-3 {
    top: 55%;
    animation: moveGroupRight 12s linear infinite;
    animation-delay: -4s;
  }
  

  /* Vertical packet group animations */
  .packet-group-4 {
    left: 20%;
  }
  
  .packet-group-4 .data-packet,
  .packet-group-4 .data-trail {
    background: var(--accent-secondary);
    box-shadow: 0 0 20px var(--accent-secondary), 0 0 10px var(--accent-secondary);
  }
  
  .packet-group-4 {
    animation: moveGroupDown 9s linear infinite;
  }
  
  .packet-group-4 .data-trail-line {
    background: linear-gradient(to top, var(--accent-secondary), transparent);
    width: 2px;
    height: 60px;
    left: 3px;
    top: -60px;
  }

  .packet-group-5 {
    left: 60%;
  }
  
  .packet-group-5 .data-packet,
  .packet-group-5 .data-trail {
    background: var(--accent-secondary);
    box-shadow: 0 0 20px var(--accent-secondary), 0 0 10px var(--accent-secondary);
  }
  
  .packet-group-5 {
    animation: moveGroupDown 11s linear infinite;
    animation-delay: -3s;
  }
  
  .packet-group-5 .data-trail-line {
    background: linear-gradient(to top, var(--accent-secondary), transparent);
    width: 2px;
    height: 60px;
    left: 3px;
    top: -60px;
  }

  .packet-group-6 {
    left: 80%;
    animation: moveGroupDown 10s linear infinite;
    animation-delay: -5s;
  }
  
  .packet-group-6 .trail-1 { top: -12px; }
  .packet-group-6 .trail-2 { top: -24px; }
  .packet-group-6 .trail-3 { top: -36px; }

  @keyframes moveGroupRight {
    0% {
      left: -50px;
      opacity: 0;
    }
    3% {
      opacity: 1;
    }
    97% {
      opacity: 1;
    }
    100% {
      left: calc(100% + 50px);
      opacity: 0;
    }
  }

  @keyframes moveGroupDown {
    0% {
      top: -50px;
      opacity: 0;
    }
    3% {
      opacity: 1;
    }
    97% {
      opacity: 1;
    }
    100% {
      top: calc(100% + 50px);
      opacity: 0;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .data-flow-bg {
      opacity: 0.4;
    }

    .data-packet {
      width: 6px;
      height: 6px;
    }
  }

  /* Light mode - reduce intensity of data flow background */
  [data-theme="light"] .data-flow-bg {
    opacity: 0.35;
  }

  [data-theme="light"] .flow-line {
    opacity: 0.1;
  }

  [data-theme="light"] .data-packet {
    box-shadow: 0 0 12px currentColor, 0 0 6px currentColor;
  }

  [data-theme="light"] .data-trail-line {
    opacity: 0.5;
    box-shadow: 0 0 5px currentColor;
  }

  @media (prefers-color-scheme: light) {
    :root:not([data-theme]) .data-flow-bg {
      opacity: 0.35;
    }
    :root:not([data-theme]) .flow-line {
      opacity: 0.1;
    }
    :root:not([data-theme]) .data-packet {
      box-shadow: 0 0 12px currentColor, 0 0 6px currentColor;
    }
    :root:not([data-theme]) .data-trail-line {
      opacity: 0.5;
      box-shadow: 0 0 5px currentColor;
    }
  }
</style>
