---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SiteCard from '../components/SiteCard.astro';
import { sites } from '../data/sites';
---

<BaseLayout title="Search | WRLD.one">
  <Header />
  
  <main class="search-page">
    <div class="container">
      <div class="search-header">
        <h1 class="search-title">Search WRLD</h1>
        <p class="search-subtitle">Find services, documentation, and resources across the entire WRLD ecosystem</p>
      </div>
      
      <div class="search-container">
        <div class="search-input-wrapper">
          <svg class="search-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <path d="m21 21-4.35-4.35"/>
          </svg>
          <input 
            type="text" 
            class="search-input" 
            placeholder="Type to search..."
            id="searchInput"
            autofocus
          />
          <button class="search-clear" id="clearSearch" style="display: none;">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="18" y1="6" x2="6" y2="18"/>
              <line x1="6" y1="6" x2="18" y2="18"/>
            </svg>
          </button>
        </div>
        
        <div class="search-meta">
          <span id="resultCount">{sites.length} services available</span>
        </div>
      </div>
      
      <div class="search-results" id="searchResults">
        {sites.map(site => (
          <SiteCard site={site} />
        ))}
      </div>
      
      <div class="no-results" id="noResults" style="display: none;">
        <div class="no-results__icon">üîç</div>
        <h3 class="no-results__title">No results found</h3>
        <p class="no-results__text">Try adjusting your search terms or browse all services</p>
        <button class="btn" id="showAllBtn">Show All Services</button>
      </div>
    </div>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .search-page {
    padding: var(--space-3xl) 0;
    min-height: 80vh;
  }
  
  .search-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }
  
  .search-title {
    font-family: var(--font-display);
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: var(--space-sm);
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-purple));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .search-subtitle {
    color: var(--text-secondary);
    font-size: 1.1rem;
  }
  
  .search-container {
    max-width: 700px;
    margin: 0 auto var(--space-2xl);
  }
  
  .search-input-wrapper {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: var(--bg-secondary);
    border: 2px solid var(--border-default);
    border-radius: var(--radius-lg);
    transition: all 0.3s ease;
  }
  
  .search-input-wrapper:focus-within {
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 4px rgba(0, 173, 238, 0.15), var(--shadow-glow);
  }
  
  .search-icon {
    color: var(--text-muted);
    flex-shrink: 0;
  }
  
  .search-input {
    flex: 1;
    background: none;
    border: none;
    font-family: var(--font-body);
    font-size: 1.25rem;
    color: var(--text-primary);
    outline: none;
  }
  
  .search-input::placeholder {
    color: var(--text-muted);
  }
  
  .search-clear {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: var(--bg-tertiary);
    border: none;
    border-radius: var(--radius-md);
    color: var(--text-muted);
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .search-clear:hover {
    background: var(--bg-elevated);
    color: var(--text-primary);
  }
  
  .search-meta {
    text-align: center;
    margin-top: var(--space-md);
    font-size: 0.9rem;
    color: var(--text-muted);
  }
  
  .search-results {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-lg);
  }
  
  .no-results {
    text-align: center;
    padding: var(--space-3xl);
  }
  
  .no-results__icon {
    font-size: 4rem;
    margin-bottom: var(--space-lg);
    opacity: 0.5;
  }
  
  .no-results__title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    margin-bottom: var(--space-sm);
  }
  
  .no-results__text {
    color: var(--text-secondary);
    margin-bottom: var(--space-xl);
  }
  
  @media (max-width: 768px) {
    .search-results {
      grid-template-columns: 1fr;
    }
  }
</style>

<script define:vars={{ sites }}>
  const searchInput = document.getElementById('searchInput');
  const clearBtn = document.getElementById('clearSearch');
  const resultsContainer = document.getElementById('searchResults');
  const noResults = document.getElementById('noResults');
  const resultCount = document.getElementById('resultCount');
  const showAllBtn = document.getElementById('showAllBtn');
  const siteCards = resultsContainer?.querySelectorAll('.site-card');
  
  // Get URL params
  const urlParams = new URLSearchParams(window.location.search);
  const initialQuery = urlParams.get('q') || '';
  
  if (initialQuery && searchInput) {
    searchInput.value = initialQuery;
    performSearch(initialQuery);
  }
  
  function performSearch(query) {
    const q = query.toLowerCase().trim();
    let visibleCount = 0;
    
    siteCards?.forEach(card => {
      const name = card.querySelector('.site-card__name')?.textContent?.toLowerCase() || '';
      const domain = card.querySelector('.site-card__domain')?.textContent?.toLowerCase() || '';
      const desc = card.querySelector('.site-card__description')?.textContent?.toLowerCase() || '';
      const features = Array.from(card.querySelectorAll('.site-card__feature'))
        .map(f => f.textContent?.toLowerCase() || '').join(' ');
      
      const matches = !q || name.includes(q) || domain.includes(q) || desc.includes(q) || features.includes(q);
      
      if (matches) {
        card.style.display = '';
        card.style.animation = 'fadeIn 0.3s ease-out';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });
    
    // Update UI
    if (clearBtn) clearBtn.style.display = q ? 'flex' : 'none';
    if (resultCount) resultCount.textContent = `${visibleCount} result${visibleCount !== 1 ? 's' : ''} found`;
    if (noResults) noResults.style.display = visibleCount === 0 ? 'block' : 'none';
    if (resultsContainer) resultsContainer.style.display = visibleCount === 0 ? 'none' : 'grid';
  }
  
  searchInput?.addEventListener('input', (e) => {
    performSearch(e.target.value);
  });
  
  clearBtn?.addEventListener('click', () => {
    if (searchInput) searchInput.value = '';
    performSearch('');
    searchInput?.focus();
  });
  
  showAllBtn?.addEventListener('click', () => {
    if (searchInput) searchInput.value = '';
    performSearch('');
  });
</script>
